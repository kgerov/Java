package _01_Geometry;

import java.util.List;

public abstract class PlaneShape extends Shape implements PerimeterMeasurable, AreaMeasurable{
	
	public PlaneShape(List<Vertex> vertices) {
		super(vertices);
	}
	
	public abstract double Area();

	public abstract double Perimeter();
	
	private void check2D(List<Vertex> vertices) { 
		for (Vertex vertex : vertices) {
			if (vertex.getClass().getName() != "_01_Geometry.Vertex2D") {
				throw new IllegalArgumentException("Vertices should be 2D");
			}
		}
	}
}
