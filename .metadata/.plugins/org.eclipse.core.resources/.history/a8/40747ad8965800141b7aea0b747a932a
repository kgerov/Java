package _02_LevShop;

public class PurchaseManager {
	public static void processPurchase(Product product, Customer customer) {
		if (!isInStock()) {
			throw new Exception("Product is Out of Stock");
		}
		
		if (isExpired()) {
			throw new Exception("Product is Expired");
		}
		
		if (!hasEnoughMoney()) {
			throw new Exception("Customer doesn't have enough money");
		}
		
		if (!isWithingAgeRestict()) {
			throw new Exception("Customer isn't withing age group");
		}
	}
	
	private static boolean isInStock() {
		
	}
	
	private static boolean isExpired() {
		
	}
	
	private static boolean hasEnoughMoney() {
		
	}
	
	private static boolean isWithingAgeRestict() {
		
	}
}
